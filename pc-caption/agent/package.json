{
  "name": "pc-caption-agent",
  "version": "1.0.0",
  "description": "PC Caption Analysis Agent with Clean Architecture",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/example/analyze-single-screenshot.example.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "example:single": "tsx src/example/analyze-single-screenshot.example.ts"
  },
  "keywords": [
    "ai",
    "analysis",
    "clean-architecture",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@openai/agents": "^0.1.9",
    "dotenv": "^16.4.5",
    "openai": "^4.72.0",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.11.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.0"
  }
}
